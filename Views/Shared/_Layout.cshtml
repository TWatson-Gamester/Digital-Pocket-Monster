<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital Pocket Monster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar sticky-top navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <div class="d-flex w-100">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img class="logosize" src="~/images/Gommamon_Placeholder.png" height="50" /> </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="d-flex w-100">
                            <div class="d-flex justify-content-md-between mr-auto">

                                <ul class="navbar-nav me-auto m-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Collection">Collection</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DeckBuilding">Deck Builder</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Database">Database</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Store">Store</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Deck">Deck</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                </ul>
                        </div>
                        <div class="d-flex justify-content-md-between">
                            <form class="d-flex" asp-controller="Home" asp-action="SeachCards" method="post">
                                <input class="me-2" type="search" name="srchKeyTerms" placeholder="Search" />
                                <button type="submit">Submit</button>
                            </form>

                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-dark d-flex " asp-area="" asp-controller="Home" asp-action="Index">Login / Signup {Replace Action}</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark d-flex " asp-area="" asp-controller="Home" asp-action="Profile">Profile {Replace Later}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Digital_Pocket_Monster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
