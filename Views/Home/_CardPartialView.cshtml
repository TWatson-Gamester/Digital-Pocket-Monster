@model Card

@if (Model == null)
{
    <h1>No card available</h1>
}
else
{
    <div class="col-6">
        <img class="cardImageSize" src="~/images/@Model.image">
    </div>
    <div class="col-6 text-center">
        <h3>@Model.name</h3>
        <h4>Year: @Model.cardType</h4>
        <h4>Color: @Model.color</h4>
        <h4>Level: @Model.level</h4>
        <h5>Card Number: @Model.cardNumber</h5>
    </div>
}
