@model Card

@if (Model == null)
{
    <h1>No card available</h1>
}
else
{
    <div class="col-12">
            <div class="row">
                <div claImagesol-12">
                    <h3>@Model.Name</h3>
                </div>
            </div>
        <div class="row">
            <div class="col-md-6">
                <img class="cardImageSize" src="~/images/@Model.Image">
            </div>
            <div class="col-md-6 text-center">
                <h5>Card Type: @Model.CardType</h5>
                <h5>Color: @Model.Color</h5>
                <h5>Level: @Model.Level</h5>
                <h5>Card Number: @Model.CardNumber</h5>
            </div>
        </div>
    </div>
}
