@model IEnumerable<Card>
<div class="row justify-content-center">
    <h1>Collection</h1>
</div>
@{

}
<div class="row justify-content-center">
    <h1>List of Cards</h1>
</div>

<div class="container-fluid">
    <div class="row">
        @if (Model == null)
        {
            <h1>no cards</h1>
        }
        else
        {
            foreach (var card in Model)
            {
                <p><partial name="_CardPartialView.cshtml" for="@card" /> </p>
            }
        }
    </div>
</div>
